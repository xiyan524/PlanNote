<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jenice.myplanapp.fragment.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray">

        <!--底部tab-->
        <LinearLayout
            android:id="@+id/linear_bottom_tab"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:background="@color/white">

            <!--home部分-->
            <RelativeLayout
                android:id="@+id/rl_home"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/iv_tab_home"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/home_black"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_tab_home"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="bottom"
                    android:text="主页"
                    android:textSize="16dp"
                    android:textAlignment="center" />
                <View
                    android:id="@+id/line_home"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/orange"
                    android:layout_alignParentBottom="true"
                    android:visibility="invisible">
                </View>

            </RelativeLayout>

            <!--探索部分-->
            <RelativeLayout
                android:id="@+id/rl_activity"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/iv_tab_activity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/activity_black"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_tab_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="bottom"
                    android:text="活动"
                    android:textSize="16dp"
                    android:textAlignment="center" />
                <View
                    android:id="@+id/line_activity"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/orange"
                    android:layout_alignParentBottom="true"
                    android:visibility="invisible">
                </View>
            </RelativeLayout>

            <!--mine部分-->
            <RelativeLayout
                android:id="@+id/rl_mine"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.0">

                <ImageView
                    android:id="@+id/iv_tab_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/mine_black"
                    android:layout_centerHorizontal="true"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/tv_tab_mine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="bottom"
                    android:text="我的"
                    android:textSize="16dp"
                    android:textAlignment="center" />
                <View
                    android:id="@+id/line_mine"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/orange"
                    android:layout_alignParentBottom="true"
                    android:visibility="invisible">
                </View>
            </RelativeLayout>

        </LinearLayout>

        <!--中间内容部分-->
        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_above="@+id/linear_bottom_tab">
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
