<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jenice.myplanapp.mine.MineCreateApplyDetail">
    <!--返回栏-->
    <FrameLayout
        android:id="@+id/fl_mine_create_apply_detail"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray">
        <ImageView
            android:id="@+id/iv_mine_create_apply_detail_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/return_iv"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_mine_create_apply_detail_topText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="计划详情"
            android:textSize="@dimen/title_size"
            android:textColor="@color/orange"
            android:layout_gravity="center"/>
    </FrameLayout>
    <!--图片-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_mine_create_apply_detail_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:src="@drawable/plan1" />
        <TextView
            android:id="@+id/tv_mine_create_apply_detail_showday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Day X"
            android:textSize="50dp"
            android:textColor="@color/white"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"/>
    </FrameLayout>
    <!--详细内容-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:layout_marginTop="10dp">
                <EditText
                    android:id="@+id/et_mine_create_apply_detail_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:hint="请输入该日任务名称"
                    android:textSize="@dimen/content_size"
                    android:maxLength="10"
                    android:layout_margin="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/gray">
                <EditText
                    android:id="@+id/et_mine_create_apply_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:layout_margin="10dp"
                    android:hint="请输入该日任务步骤"
                    android:textSize="@dimen/content_size"
                    android:lines="8"
                    android:maxLines="30"/>
            </LinearLayout>
            <Button
                android:id="@+id/btn_mine_create_apply_detail_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape"
                android:textSize="@dimen/title_size"
                android:text="确认填写"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
