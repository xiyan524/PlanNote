<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jenice.myplanapp.mine.MinePersonal">
    <!--返回栏-->
    <FrameLayout
        android:id="@+id/fl_mine_personal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray">
        <ImageView
            android:id="@+id/iv_mine_personal_back"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/return_iv"
            android:layout_gravity="center|left"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_mine_personal_topText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人资料"
            android:textSize="@dimen/title_size"
            android:textColor="@color/orange"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tv_mine_personal_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="@dimen/small_size"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"/>
    </FrameLayout>

    <!--头像显示-->
    <LinearLayout
        android:id="@+id/ll_mine_personal_photo"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <com.example.jenice.myplanapp.AvatarImageView
            android:id="@+id/iv_mine_personal_photo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mine_photo"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/tv_mine_personal_photo_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改头像"
            android:textSize="@dimen/content_size"
            android:layout_gravity="center" />
    </LinearLayout>

    <!--昵称-->
    <FrameLayout
        android:id="@+id/ll_mine_personal_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/tv_mine_personal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="@dimen/content_size"
            android:layout_marginLeft="20dp"
            android:layout_gravity="left|center"/>
        <EditText
            android:id="@+id/et_mine_personal_name_edit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:hint="昵称"
            android:textSize="@dimen/small_size"
            android:textColor="@color/black"
            android:background="@null"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tv_mine_personal_name_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="21分之7"
            android:textSize="@dimen/small_size"
            android:textColor="@color/hint_text"
            android:layout_gravity="center|right"
            android:layout_marginRight="15dp"/>
    </FrameLayout>

    <!--性别-->
    <FrameLayout
        android:id="@+id/ll_mine_personal_sex"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray">
        <TextView
            android:id="@+id/tv_mine_personal_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="性别"
            android:textSize="@dimen/content_size"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center|left"/>
        <TextView
            android:id="@+id/tv_mine_personal_sex_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:text="女"
            android:textSize="@dimen/small_size"
            android:textColor="@color/hint_text"
            android:background="@null" />
        <Spinner
            android:id="@+id/spn_mine_personal_sex_edit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:entries="@array/mine_personal_sex"
            android:visibility="invisible">
        </Spinner>
    </FrameLayout>

    <!--我的目标-->
    <FrameLayout
        android:id="@+id/ll_mine_personal_goal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray">
        <TextView
            android:id="@+id/tv_mine_personal_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的目标"
            android:textSize="@dimen/content_size"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center|left"/>
        <EditText
            android:id="@+id/et_mine_personal_goal_edit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:hint="目标"
            android:textSize="@dimen/small_size"
            android:textColor="@color/black"
            android:background="@null"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tv_mine_personal_goal_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="努力锻炼身体"
            android:textColor="@color/hint_text"
            android:textSize="@dimen/small_size"
            android:layout_gravity="center|right"
            android:layout_marginRight="15dp"/>
    </FrameLayout>

    <!--自我介绍-->
    <FrameLayout
        android:id="@+id/ll_mine_personal_intro"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray">
        <TextView
            android:id="@+id/tv_mine_personal_intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自我介绍"
            android:textSize="@dimen/content_size"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center|left"/>
        <EditText
            android:id="@+id/et_mine_personal_intro_edit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"
            android:hint="介绍"
            android:textSize="@dimen/small_size"
            android:textColor="@color/black"
            android:background="@null"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tv_mine_personal_intro_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我是不一样的花火"
            android:textSize="@dimen/small_size"
            android:textColor="@color/hint_text"
            android:layout_gravity="center|right"
            android:layout_marginRight="15dp"/>
    </FrameLayout>

    <!--绑定账号-->
    <FrameLayout
        android:id="@+id/ll_mine_personal_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/gray"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/tv_mine_personal_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定账号"
            android:textSize="@dimen/content_size"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center|left"/>
        <ImageView
            android:id="@+id/iv_mine_personal_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/go_ahead"
            android:layout_gravity="right|center"
            android:layout_marginRight="15dp"/>
    </FrameLayout>
</LinearLayout>
